action Attack {
	pre: {
		weaponIsLoaded: true
   },
	post: {
		targetIsDead: true
	}
}

action LoadWeapon {
	pre: {
		weaponIsArmed: true
   },
	post: {
		weaponIsLoaded: true
	}
}

action DrawWeapon {
	post: {
		weaponIsArmed: true
	}
}

goal KillEnemy {
	enemyDead: true
}

character RedSoldier {
	goals: [KillEnemy],
   actions: [
		Attack,
		LoadWeapon,
		DrawWeapon
	]
}
